<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logowanie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
<h1>Logowanie</h1>

<% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger">
        <ul>
            <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
            <% }); %>
        </ul>
    </div>
<% } %>

<form id="loginForm" action="/auth/login" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
        <label class="form-label">Nazwa użytkownika:</label>
        <input type="text" class="form-control" name="username" required>
        <div class="invalid-feedback">Nazwa użytkownika jest wymagana.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Hasło:</label>
        <input type="password" class="form-control" name="password" required>
        <div class="invalid-feedback">Hasło jest wymagane.</div>
    </div>

    <button type="submit" class="btn btn-primary">Zaloguj</button>
</form>

<a href="/auth/register" class="btn btn-link mt-3">Nie masz konta? Zarejestruj się</a>

<script>
    (function () {
        'use strict';
        document.getElementById('loginForm').addEventListener('submit', function (event) {
            if (!this.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            this.classList.add('was-validated');
        }, false);
    })();
</script>
</body>
</html>
